        <ToolbarItem Text="Yenile" Clicked="OnYenile" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <Frame HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="120" Padding="55,15" BackgroundColor="LightCoral" CornerRadius="30" Grid.Row="0">
