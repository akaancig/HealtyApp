                    <Label Text="Sayfa Yükleniyor," TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="5" FontAttributes="Bold" FontSize="18" />
                    <Label Text="Lütfen Bekleyiniz..." TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Padding="5,5,5,0" FontAttributes="Bold" FontSize="18" />
                </StackLayout>
            </Frame>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>